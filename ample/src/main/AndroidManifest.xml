<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.siyuan.muzei.ample">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<!-- Required by RemoteMuzeiArtSource -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
		android:icon="@drawable/ic_launcher">

		<service android:name=".AmpleArtSource"
				 android:label="@string/source_name"
				 android:description="@string/source_description"
				 android:icon="@drawable/ic_source">
			<intent-filter>
				<action android:name="com.google.android.apps.muzei.api.MuzeiArtSource" />
			</intent-filter>
			<meta-data android:name="color" android:value="#51504e" />
			<meta-data android:name="settingsActivity" android:value=".settings.AmpleSettingsActivity" />
		</service>

		<receiver android:name=".AmpleDownloadReceiver">
			<intent-filter>
				<action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
			</intent-filter>
		</receiver>

	    <activity
		    android:name=".settings.AmpleSettingsActivity"
		    android:label="@string/settings_name"
		    android:theme="@style/settings"
			android:excludeFromRecents="true"
		    android:exported="true">
	    </activity>

		<activity
			android:name=".settings.AmpleAboutActivity"
			android:label="@string/about_name"
			android:theme="@style/about">
		</activity>

	    <activity
		    android:name=".settings.AmpleFiltersActivity"
		    android:label="@string/settings_filters"
		    android:theme="@style/about">
		    <intent-filter>
			    <action android:name=".settings.AmpleFiltersActivity" />
			    <category android:name="android.intent.category.DEFAULT" />
		    </intent-filter>
	    </activity>

	</application>

</manifest>
